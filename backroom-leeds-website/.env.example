# The Backroom Leeds - Environment Variables Configuration

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-make-it-long-and-random

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# SENDGRID EMAIL CONFIGURATION
# =============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@backroomleeds.co.uk
SENDGRID_FROM_NAME=The Backroom Leeds

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
NODE_ENV=development
DEBUG=true

# =============================================================================
# ADMIN SYSTEM CONFIGURATION
# =============================================================================
# Default admin user for development (will be hashed automatically)
DEFAULT_ADMIN_EMAIL=admin@backroomleeds.co.uk
DEFAULT_ADMIN_PASSWORD=change-me-in-production

# 2FA Configuration
TOTP_SERVICE_NAME=The Backroom Leeds Admin
TOTP_ISSUER=backroomleeds.co.uk

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_MAX_AGE=28800
JWT_MAX_AGE=28800